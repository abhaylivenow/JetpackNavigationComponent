<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006600"
    tools:context=".ForgetPasswordFragment">

    <TextView
        android:id="@+id/text_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Forget Password Fragment" />

    <Button
        android:id="@+id/btn_login_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_forget_password"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_signup_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login_page"
        android:layout_centerHorizontal="true"
        android:text="Sign Up" />

</RelativeLayout>